.ng-modal(ng-cloak, ng-show='show')
  .reveal-modal(ng-show='show')
    a.close-reveal-modal(ng-click='hideModal()') &#215;
    
    h1 Therapist
    form(novalidate, name='therapistForm')
      .row
        .small-4.columns
          label(for='first') First
          input#first(type='text', ng-model='obj.first', autofocus, required)
        .small-4.columns
          label(for='last') Last
          input#last(type='text', ng-model='obj.last', required)
        .small-4.columns
      .row
        .small-4.columns
          label(for='discipline') Discipline
          select.form-control#discipline(ng-model='obj.disc_id', ng-options='d.id as d.name for d in obj.disciplines | orderBy:\'name\'', required)
            option(value='') Select Discipline
        .small-4.columns
          label(for='prod') Productivity Goal %
          input#prod(type='number', ng-model='obj.productivity_goal', required)
        .small-4.columns
          label
            span.has-tip(data-tooltip, aria-haspopup='true', title='Colored means true.') Is Therapist?
          .switch
            input#isTherapist(type='checkbox', ng-model='obj.is_therapist')
            label(for='isTherapist')
      .row
        .small-4.columns
          label(for='email') Email Address
          input#email(type='text', ng-model='obj.email')
        .small-4.columns
          label(for='phone') Phone
          input#phone(type='text', ng-model='obj.phone')
        .small-4.columns
      .row
        .small-3.columns
        .small-6.columns
          button.button(ng-show='therapistForm.$valid', ng-click='execute({data: obj})') Save
        .small-3.columns
  .reveal-modal-bg(ng-click='hideModal()')
