.ng-modal(ng-cloak, ng-show='show')
  .reveal-modal(ng-show='show')
    a.close-reveal-modal(ng-click='hideModal()') &#215;
    
    h1 Insurance
    form
        .row
           .small-3.columns
           .small-6.columns
              label(for='name') Name
              input#name(type='text', name='name', ng-model='obj.name', autofocus)
           .small-3.columns
        .row
           .small-3.columns
           .small-6.columns
              .switch
                input#isRug(type='checkbox', ng-model='obj.is_rug')
                label(for='isRug') Is Rug?
           .small-3.columns
        .row
           .small-3.columns
           .small-6.columns
              button.button(ng-click='execute({data: obj})') Save
           .small-3.columns
  .reveal-modal-bg(ng-click='hideModal()')
